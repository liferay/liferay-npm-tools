{
	"devDependencies": {
		"eslint": "6.1.0",
		"eslint-config-liferay": "8.0.0",
		"prettier": "1.18.2"
	},
	"jest": {
		"testMatch": [
			"**/test/**/*.js"
		],
		"testPathIgnorePatterns": [
			"<rootDir>/packages/check-source-formatting/"
		]
	},
	"private": true,
	"scripts": {
		"ci": "yarn format:check && yarn lint && yarn test",
		"format": "prettier --write '**/*.js' '**/*.json' '**/*.md'",
		"format:check": "prettier --list-different '**/*.js' '**/*.json' '**/*.md'",
		"lint": "eslint '**/*.js'",
		"lint:fix": "eslint --fix '**/*.js'",
		"test": "jest"
	},
	"workspaces": [
		"packages/*"
	],
	"version": "0.1.0"
}
